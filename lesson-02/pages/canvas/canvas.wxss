/* pages/canvas/canvas.wxss */

/* 画布容器 */
.cvs {
  position: relative;              /* 相对定位以便于绝对定位的子元素 */
  overflow: hidden;                /* 隐藏超出部分 */
  border: 1px solid #ccc;          /* 边框 */
  border-radius: 10px;             /* 圆角 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2); /* 阴影效果 */
}

/******************************************/
  
.main {
  position: relative;
  width: 100%;
  height: 100vh; /* 让页面占满整个视口 */
  overflow: hidden; /* 避免内容超出 */
}

map {
  width: 100%;
  height: 100vh;
}

canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 10; /* 确保 canvas 在 map 上层 */
  background-color: transparent; /* 设置画布背景为透明 */
}

.sidebar {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 20;
  background-color: white;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

button {
  width: 120px;
  height: 40px;
  background-color: #1b76c0;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}
