  <view class="whiteLine"></view>

  <block>
    <input type="text" bindinput="getZhanghao"  placeholder="Id" placeholder-class="ph" />
    <input type="text" bindinput="getMima"  placeholder="Password" placeholder-class="ph" password="true"/>
