/* pages/canvas/canvas.wxss */
  
.main {
  position: fixed;
  width: 100%;
  height: 100%; /* 让页面占满整个视口 */
  overflow: hidden; /* 避免内容超出 */
}

map {
  width: 100%;
  height: 100%;
  z-index: 1;
}

/*************************************************************/

canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5; /* 确保 canvas 在 map 上层 */
  background-color: transparent; /* 设置画布背景为透明 */
}

.sidebar {
  position: absolute;
  top: 5px;
  right: 5px;
  z-index: 10;
  background-color: white;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.sidebar2 {
  position: absolute;
  top: 5px;
  left: 5px;
  z-index: 9;
  background-color: white;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

button {
  width: 100px;
  height: 40px;
  background-color: white;
  color: #1b76c0;
  border: none;
  border-radius: 4px;
  font-size: 5px;
  z-index: 8;
}

.button.active {
  background-color: #ff9800; /* 高亮选中的工具 */
}

mp-halfScreenDialog {
  position: absolute;
  z-index: 20; /* 较高 z-index，确保在最上层 */
}
