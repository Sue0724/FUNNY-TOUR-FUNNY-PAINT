/* pages/canvas/canvas.wxss */
  
.main {
  position: fixed;
  width: 100%;
  height: 100%; /* 让页面占满整个视口 */
  overflow: hidden; /* 避免内容超出 */
}

map {
  width: 100%;
  height: 100%;
}

/*************************************************************/

canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10; /* 确保 canvas 在 map 上层 */
  background-color: transparent; /* 设置画布背景为透明 */
}

.sidebar {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 20;
  background-color: white;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

button {
  width: 120px;
  height: 40px;
  background-color: #1b76c0;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}

.toolbar {
  position: absolute;
  top: 80px; /* 根据需要调整位置 */
  left: 20px;
  z-index: 20;
  background-color: white;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.button.active {
  background-color: #ff9800; /* 高亮选中的工具 */
}

