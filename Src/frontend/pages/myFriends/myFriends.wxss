.container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-icon {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 10;
  display: flex;          /* 居中内容 */
}

.sidebar {
  width: 40%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ffffff;
  box-shadow: -4px 0 8px rgba(0, 0, 0, 0.2);
  z-index: 20;
}
.close-icon {
  width: 30px;
  height: 30px;
  margin-top: 10rpx;
  margin-left: -20rpx;
}
.sidebar-header {
  height: 30px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  background-color: #f5f5f5;
}
.sidebar .item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #000;
  /* padding: 30rpx 0; */
  padding: 16px;
} 
.friends-header
{
