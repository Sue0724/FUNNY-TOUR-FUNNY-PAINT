}
/* 好友列表样式 */


.friends-list {
  position: absolute;
  top: 50px;  /* 离屏幕顶部 20px */
  left: 20px;  /* 离屏幕左边 20px */
  right: 20px;  /* 离屏幕右边 20px */
  display: flex;  /* 使用 flexbox 来水平排列好友项 */
  flex-wrap: wrap;  /* 当空间不足时，自动换行 */
  flex-direction: column;  /* 垂直排列好友项 */
  gap: 20px;  /* 每个好友项之间的间隔 */
  padding: 0 20px;  /* 添加内边距，使得好友项离屏幕边缘 20px */
}

.friend-item {
  display: flex;  /* 使用 flexbox 对好友项进行布局 */
  flex-direction: row;  /* 水平排列好友项 */
  justify-content: space-between;  /* 让好友信息和删除按钮左右排列 */
  align-items: center;
  width: 100%;
  padding: 20px;
  background-color: #f0f0f0;  /* 背景色可以根据需求调整 */
  border-radius: 8px;  /* 圆角 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);  /* 可选的阴影效果 */
  box-sizing: border-box;
}

.friend-info {
  flex: 1;  /* 让好友信息部分占据剩余空间 */
}

.delete-btn {
  padding: 5px 10px;
  border-radius: 5px;
  color: white;
  cursor: pointer;
}

.delete-btn {
  background-color: red;
  color: white;
  width: 80rpx;
  height: 100%; /* 高度与好友项一致 */
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}
