.container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-icon {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 10;
  display: flex;          /* 居中内容 */
}

.sidebar {
  width: 40%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ffffff;
  box-shadow: -4px 0 8px rgba(0, 0, 0, 0.2);
  z-index: 20;
}
.close-icon {
  width: 30px;
  height: 30px;
  margin-top: 10rpx;
  margin-left: -20rpx;
}
.sidebar-header {
  height: 30px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  background-color: #f5f5f5;
}
.sidebar .item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #000;
  /* padding: 30rpx 0; */
  padding: 16px;
} 
.friends-header
{
  position: absolute;
  top: 10px;
  right:42%;
  z-index: 10;
  display: flex;          /* 居中内容 */
  color:#ffffff;
}
/* 好友列表样式 */
.friends-list {
  position: absolute;
  padding: 10rpx;
  top: 40px;
  width: 97%;
}

.friend-item {
  display: flex;
  align-items: center;
  background-color: #f5f5f5; /* 设置背景颜色 */
  border-radius: 5px;
  width: 97%;
  margin: 5px 0; /* 保持好友项之间的间距 */
  padding: 10rpx; /* 减少内边距以适应更好的布局 */
  height: 50rpx; /* 设置固定高度 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

.friend-info {
  flex-grow: 1;
}

.delete-btn {
  background-color: red;
  color: white;
  width: 80rpx;
  height: 100%; /* 高度与好友项一致 */
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}
