page {
  padding-bottom: 50rpx;
  background: -webkit-linear-gradient(top, #82af8a 0%, #CCCCCC 100%);
  background: -o-linear-gradient(top, #82af8a 0%, #CCCCCC 100%);
  background: -ms-linear-gradient(top, #82af8a 0%, #CCCCCC 100%);
