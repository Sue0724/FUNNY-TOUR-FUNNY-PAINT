/* pages/map/map_index/map_index.wxss */

.main {
    position: fixed;
    width: 100%;
    height: 100%; /* 让页面占满整个视口 */
    overflow: hidden; /* 避免内容超出 */
  }
  
  map {
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .list-icon {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 10;
    display: flex;          /* 居中内容 */
  }

  .sidebar {
    width: 40%;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    background-color: #ffffff;
    box-shadow: -4px 0 8px rgba(0, 0, 0, 0.2);
    z-index: 20;
  }
  .close-icon {
    width: 30px;
    height: 30px;
    margin-top: 10rpx;
    margin-left: -20rpx;
  }
  .sidebar-header {
    height: 30px;
    display: flex;
    align-items: center;
    padding: 0 16px;
    background-color: #f5f5f5;
  }
  .sidebar .item{
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #82af8a;
    /* padding: 30rpx 0; */
    padding: 16px;
  } 
  button {
    width: 100px;
    height: 40px;
    background-color: white;
    color: #1b76c0;
    border: none;
    border-radius: 4px;
    font-size: 15px;
    z-index: 8;
    margin-bottom: 5px; /* 添加按钮之间的间距 */
  }
  
  button:active {
    background-color: #ff9800; /* 高亮选中的工具 */
    color: white;
  }

  canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 5; /* 确保 canvas 在 map 上层 */
    background-color: transparent; /* 设置画布背景为透明 */
  }
  