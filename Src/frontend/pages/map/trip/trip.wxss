/* pages/map/trip/trip.wxss */
 
.main {
    position: fixed;
    width: 100%;
    height: 100%; /* 让页面占满整个视口 */
    overflow: hidden; /* 避免内容超出 */
  }
  
  map {
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  button:active {
    background-color: #ff9800; /* 高亮选中的工具 */
    color: white;
  }
  
  /***********************************/
  
  /* 地点列表样式 */
  .place-list {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40%;
    background-color: white;
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.2);
    z-index: 10;
    padding: 10px;
    overflow: hidden;
    border-radius: 10px 10px 0 0; /* 圆角 */
  }
  
  .place-item {
    padding: 10px;
    border-bottom: 1px solid #ddd;
    font-size: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .place-item.active {
    background-color: #ffeb3b; /* 选中后的高亮背景色 */
  }
  
  .place-info {
    display: block; /* 确保子元素占据整行 */
  }
  
  .place-name {
    font-weight: bold;
    color: #333;
    display: block; /* 确保在单独一行 */
  }
  
  .place-category {
    font-size: 14px;
    color: #666;
    display: block; /* 确保在单独一行 */
  }

  .place-category-input {
    width: 100%;
    border: none;
    outline: none;
    font-size: 14px;
  }  
  
  scroll-view {
    height: 100%; /* 确保可滚动区域占满列表 */
  }

  /**************************/
  
  .day-input {
    width: 60%;
    border: 1px solid #ccc;
    padding: 4px;
  }
  
  .submit-day {
    background-color: #007aff;
    color: #fff;
    padding: 4px;
    border: none;
    border-radius: 4px;
  }

  /*********************************/
  .distance-duration {
    position: absolute;
    bottom: 60px;
    left: 20px;
    z-index: 10; /* 将该元素置于地图之上 */
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    border-radius: 4px;
  }
  
  .distance-duration text {
    display: block;
    font-size: 16px;
    color: #333;
    margin-bottom: 5px;
  }

  .list-icon {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 10;
    /* background-color: white; 设置白色背景 */
    display: flex;          /* 居中内容 */
  }

  .sidebar {
    width: 40%;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    background-color: #ffffff;
    box-shadow: -4px 0 8px rgba(0, 0, 0, 0.2);
    z-index: 20;
  }
  .close-icon {
    width: 30px;
    height: 30px;
    margin-top: 10rpx;
    margin-left: -20rpx;
  }
  .sidebar-header {
    height: 30px;
    display: flex;
    align-items: center;
    padding: 0 16px;
    background-color: #f5f5f5;
  }
  .sidebar .item{
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #82af8a;
    /* padding: 30rpx 0; */
    padding: 16px;
  } 