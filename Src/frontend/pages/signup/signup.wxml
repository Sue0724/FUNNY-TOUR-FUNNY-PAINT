  <block>
    <input type="text" bindinput="getZhangHao"  placeholder="请输入账号" placeholder-class="ph" />
  </block>
  <block>
    <input type="text" bindinput="getMiMa"  placeholder="请输入密码" placeholder-class="ph" password="true"/>
