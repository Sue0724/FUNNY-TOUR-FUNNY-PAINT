.nav {
  margin-top: 40px;
  font-size: 34rpx;
  background: rgba(255, 255, 255, 0.7);
  width: 94%;
  border-radius: 30px;/*边框圆角*/
  height: 70%;
}

.nav .item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
  padding: 30rpx 0;
}

.avatar {
  width: 100%; /* 调整头像的宽度为250px */
  height: 100%; /* 调整头像的高度为250px */
  border-radius: 50%; /* 保持圆形 */
  overflow: hidden;
  object-fit: cover; /* 保持图片比例，防止拉伸 */
}

