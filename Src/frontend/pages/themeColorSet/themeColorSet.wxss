/* pages/themeColorSet/themeColorSet.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 100px;
}

.title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 0rpx;
}

.color-grid-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
}

.color-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.color-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
