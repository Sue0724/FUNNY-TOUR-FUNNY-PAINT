/* pages/my_trips/my_trips.wxss */

.main {
    position: fixed;
    width: 100%;
    height: 100%; /* 让页面占满整个视口 */
    overflow: hidden; /* 避免内容超出 */
  }

  .item {
    padding: 10px;
    border-bottom: 1px solid #ddd;
    font-size: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .name {
    font-weight: bold;
    color: #333;
    display: block; /* 确保在单独一行 */
  }

  .icon {
    width: 40rpx;      /* 图标宽度 */
    height: 40rpx;     /* 图标高度 */
    margin-left: 10rpx; /* 图标与文字之间的间距 */
    vertical-align: middle; /* 图标垂直居中 */
  }

  .search-bar {
    padding: 10px;
    background-color: #f2f2f2;
  }
  
  .search-bar input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  