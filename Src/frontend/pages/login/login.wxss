.bgImg {
  z-index: -1;
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
}

.logo {
  width: 370rpx;
  height: 370rpx;
  border-radius: 15%;
  margin-top: -90rpx;
}

.signTitle {
  color: #fff;
  display: flex;
  font-size: 33px;
  margin: 45rpx 0 15rpx 0;
}

.whiteLine {
  height: 5rpx;
  background-color: #fff;
  width: 40%;
  border-radius: 20rpx;
}

input {
  color: #fff;
  width: 60%;
  height: 80rpx;
  border: 3rpx #fff solid;
